<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display_operation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:textColor="#9E9E9E"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toTopOf="@+id/display_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/display_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:text="0"
        android:textColor="#000000"
        android:textSize="64sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_operation" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_ac"
            android:text="AC" />

        <Button
            android:id="@+id/button_delete"
            android:text="⌫" />

        <Button
            android:id="@+id/button_percent"
            android:text="%" />

        <Button
            android:id="@+id/button_divide"
            android:text="÷" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_7"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:text="9" />

        <Button
            android:id="@+id/button_multiply"
            android:text="×" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_4"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:text="6" />

        <Button
            android:id="@+id/button_minus"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button_1"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:text="3" />

        <Button
            android:id="@+id/button_plus"
            android:text="+" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button_toggle_sign"
            android:text="±" />

        <Button
            android:id="@+id/button_0"
            android:text="0" />

        <Button
            android:id="@+id/button_comma"
            android:text="," />

        <Button
            android:id="@+id/button_equals"
            android:text="=" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>